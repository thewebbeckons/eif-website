{
  "id": "the_vibes",
  "type": "SharedSlice",
  "name": "TheVibes",
  "description": "A hero section showcasing community vibes with tag, heading, description, and feature list",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default variation",
      "imageUrl": "",
      "primary": {
        "tag": {
          "type": "Text",
          "config": {
            "label": "Tag",
            "placeholder": "e.g., THE VIBES"
          }
        },
        "heading": {
          "type": "StructuredText",
          "config": {
            "label": "Heading",
            "single": "heading1",
            "placeholder": "Enter main heading"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "multi": "paragraph,strong,em",
            "placeholder": "Enter description text"
          }
        },
        "features": {
          "type": "Group",
          "config": {
            "label": "Features",
            "fields": {
              "feature_text": {
                "type": "Text",
                "config": {
                  "label": "Feature Text",
                  "placeholder": "e.g., COMMUNITY FIRST."
                }
              }
            }
          }
        }
      }
    }
  ]
}
